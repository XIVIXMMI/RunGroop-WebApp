@using RunGroopWebApp.ViewModels
@model EditUserDashboardViewModel

<form method="post" asp-action="EditUserProfile" enctype="multipart/form-data">
    <input type="hidden" id="Id" name="Id" asp-for="Id" />
    <div class="from-group">
        <label asp-for="Pace">Pace</label>
        <input asp-for="Pace" class="form-control" placeholder="pace">
        <span asp-validation-for="Pace" class="text-danger"></span>
    </div>
    <div class="from-group">
        <label asp-for="Mileage">Mileage</label>
        <input asp-for="Mileage" class="form-control" placeholder="mileage">
        <span asp-validation-for="Mileage" class="text-danger"></span>
    </div>
    <div class="from-group">
        <label asp-for="City">City</label>
        <input asp-for="City" class="form-control" placeholder="city">
        <span asp-validation-for="City" class="text-danger"></span>
    </div>
    <div class="from-group">
        <label asp-for="State">State</label>
        <input asp-for="State" class="form-control" placeholder="state">
        <span asp-validation-for="State" class="text-danger"></span>
    </div>
    <div class="from-group">
        <label asp-for="Image">Profile Image</label> 
        <input asp-for="Image" type="file" class="form-control" placeholder="image">
        <span asp-validation-for="Image" class="text-danger"></span>
    </div>
    <div class="from-group">
        <button type="submit" class="btn btn-primary">Submit</button>
    </div>
</form>
